<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <div class="card col-6 offset-2">
      <h3>Listing Details</h3>
      <img
        src="<%= listing.image %>"
        class="card-img-top show-imag"
        alt="<%= listing.title %>"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          <%= listing.description %> &#2547; <%= listing.price ?
          listing.price.toLocaleString("en-bn") : 'Price not available' %> / Per
          Night %>/ Per Night %><br />
          <%= listing.location %><br />
          <%= listing.country %><br />
        </p>
      </div>
    </div>

    <div class="btns">
      <a href="<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2"
        >Edit</a
      >
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE" />
        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
  </div>
</div>
