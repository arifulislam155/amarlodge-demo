<% layout("/layouts/boilerplate.ejs") %>
<br />
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create New Listings</h3>
    <br />
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div class="md-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title Looks Good!</div>
      </div>
      <div>
        <label for="description" class="form-label">Description</label>
        <textarea
          type="listing[description]"
          placeholder="Enter Description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please Enter a Short Description!</div>
      </div>
      <br /><br />
      <div class="row">
        <div class="md-3 col-md-4">
          <label for="price" class="form-label">Price </label>
          <input
            name="listing[price]"
            placeholder="Enter Price"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter Valid Price!</div>
        </div>
        <div class="md-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="Bangladesh"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter Valid Country!</div>
        </div>
      </div>
      <div class="md-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          name="listing[image]"
          placeholder="Enter image link"
          type="text"
          class="form-control"
        />
      </div>
      <div class="md-3">
        <label for="location" class="form-label">Lcoation</label>
        <input
          name="listing[location]"
          placeholder="Enter Lcoation"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter Valid location!</div>
      </div>
      <br />
      <button class="btb btn-dark add-btn">Add List</button><br /><br /><br />
    </form>
  </div>
</div>
